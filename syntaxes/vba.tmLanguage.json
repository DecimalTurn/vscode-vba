{
	"scopeName": "source.vba",
	"fileTypes": [
		".bas",
		".cls",
		".frm"
	],
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#visibility" },
		{ "include": "#option" }
	],
	"repository": {
		"comments": {
			"name": "comment.line",
			"begin": "'",
			"end": "$"
		},
		"visibility": {
			"name": "storage.modifier.visibility",
			"match": "\\b(Public|Private)\\b"
		},
		"option": {
			"name": "storage.modifier.option",
			"match": "Option (Explicit|Private Module|Base|(Compare (Binary|Text)+))?"
		}
	}
}
