{
	"scopeName": "source.vba",
	"fileTypes": [
		".bas",
		".cls",
		".frm"
	],
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#visibility" },
		{ "include": "#option" },
		{ "include": "#keywords" }
	],
	"repository": {
		"comments": {
			"name": "comment.line",
			"begin": "'",
			"end": "$"
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.attribute",
					"match": "\\bAttribute\\b"
				}
			]
		},
		"option": {
			"name": "storage.modifier.option",
			"match": "\\bOption (Explicit|Private Module|Base|(Compare (Binary|Text)+))?\\b"
		},
		"visibility": {
			"name": "storage.modifier.visibility",
			"match": "\\b(Public|Private)\\b"
		}
	}
}
